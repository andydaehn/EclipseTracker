<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <TextView
        android:id="@+id/textViewInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/titleColor"
        android:text="@string/infoHeader"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eclipse_viewing"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:layout_below="@id/textViewInfoHeader"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/imageViewFactSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/factsheet1"
        android:layout_below="@id/textView"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/factsheet2"
        android:layout_below="@id/imageViewFactSheet"
        android:padding="10dp"/>


</RelativeLayout>